# .env
# AdaptLab — Environment variables
# Copy this file to .env and fill in values before running.
# Never commit .env to version control.

# ── Server ─────────────────────────────────────────────────────────────────
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# ── Database ───────────────────────────────────────────────────────────────
# SQLite file path — relative to project root
DATABASE_URL=sqlite:///./adaptlab.db

# ── Ollama ─────────────────────────────────────────────────────────────────
# Base URL for the Ollama REST API running on the same server
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_GENERATE_PATH=/api/generate

# Brain A — Qwen2.5-Coder-1.5B
BRAIN_A_MODEL=qwen2.5-coder:1.5b
BRAIN_A_MAX_TOKENS=512
BRAIN_A_TIMEOUT_S=10

# Brain B — Qwen2.5-Coder-7B
BRAIN_B_MODEL=qwen2.5-coder:7b
BRAIN_B_MAX_TOKENS=1024
BRAIN_B_TIMEOUT_S=30

# ── Sandbox ────────────────────────────────────────────────────────────────
SANDBOX_TIMEOUT_S=5
SANDBOX_MAX_OUTPUT_BYTES=65536
SANDBOX_MAX_MEMORY_MB=128

# ── Adaptive engine ────────────────────────────────────────────────────────
# EMA default weight for capability score updates
DEFAULT_WEIGHT=0.15

# Initial capability score for unseen concepts
INITIAL_SCORE=0.5

# Escalation thresholds
ESCALATION_STREAK=3
ESCALATION_LOW_CAP=0.40

# Hidden test ratio minimum (anti-gaming)
HIDDEN_RATIO_MIN=0.30

# Question selector mode: False = zone-based (prototype), True = Gaussian
USE_GAUSSIAN=False

# ── Gaussian utility params (full version) ─────────────────────────────────
GAUSSIAN_MU=0.5
GAUSSIAN_SIGMA=0.2
